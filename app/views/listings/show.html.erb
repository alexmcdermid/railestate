<div class="w-full">
  <% if notice.present? %>
    <div class="flex justify-center"  data-controller="devise">
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    </div>
  <% end %>

  <div class="flex justify-center">
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block hidden" id="alert"></p>
  </div>

  <div id="title" class="flex justify-between items-center" style="cursor: default">
    <h1 class="font-bold text-4xl"><%= @listing.title %></h1>
  </div>

  <%= render(ListingComponent.new(listing: @listing, user_signed_in: user_signed_in?, user: @user)) %>
</div>
